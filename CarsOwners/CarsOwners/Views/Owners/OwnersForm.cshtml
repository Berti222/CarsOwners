@model CarsOwners.Models.Owners

@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Heading</h2>


@using (Html.BeginForm("Save","Owners"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tulajdonos</h4>
        <hr />
        @Html.ValidationSummary(true, "Helytelen formátum", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control" , type="date" } })
                @Html.ValidationMessageFor(m => m.DateOfBirth)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Vissza a listára", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
